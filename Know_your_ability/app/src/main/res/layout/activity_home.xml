<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gaming.know_your_ability.Home.HomeActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/relayout1"
            >
            <include layout="@layout/layout_top_tabs"  />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relayout1"
            android:layout_marginTop="621dp">

            <include layout="@layout/layout_center_viewpager" />

        </RelativeLayout>

        <include layout="@layout/layer_bottom_navigation_view"/>


    </RelativeLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>